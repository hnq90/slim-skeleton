{
    "name": "oanhnn/slim-skeleton",
    "type": "project",
    "description": "A Slim Framework skeleton application for rapid development",
    "keywords": ["microframework", "rest", "router"],
    "homepage": "https://github.com/oanhnn/slim-skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "OanhNN",
            "email": "oanhnn.bk@gmail.com",
            "homepage": "https://oanhnn.com/"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "ext-mcrypt": "*",
        "monolog/monolog": "~1.11.0",
        "slim/slim": "~3.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "scripts": {
        "post-install-cmd": "App\\Installer\\Installer::postInstall"
    }
}
